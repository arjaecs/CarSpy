<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borderbg" 
    android:theme="@android:style/Theme.Holo.NoActionBar" >

    <ImageView
        android:id="@+id/imgIntroMap"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_above="@+id/imgVigilantech"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/intromap"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgVigilantech"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:fontFamily="Calibri"
        android:gravity="center"
        android:text="powered by:"
        android:textColor="#F0F0F0"
        android:textSize="12sp"
        tools:ignore="HardcodedText,SmallSp" />

    <ImageView
        android:id="@+id/imgCarSpy"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/carspygray"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imgVigilantech"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:src="@drawable/vigilantech"
        tools:ignore="ContentDescription" />
    
    <ImageButton
        android:id="@+id/btnTransparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />

</RelativeLayout>