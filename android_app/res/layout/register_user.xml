<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fontFamily="Calibri" >

    <ImageView
        android:id="@+id/imgButtonDouble"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/imgTextBg"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imgTextBg"
        android:layout_marginBottom="37dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_double" />

    <ImageView
        android:id="@+id/imgTextBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgButtonUserInfo"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imgButtonUserInfo"
        android:layout_below="@+id/imgButtonUserInfo"
        android:layout_marginBottom="81dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/text_bg" />

    <ImageView
        android:id="@+id/imgButtonVehicleInfo"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/btnUserInfo"
        android:layout_alignRight="@+id/btnVehicleInfo"
        android:layout_alignTop="@+id/btnVehicleInfo"
        android:scaleType="fitXY"
        android:src="@drawable/button_double_right"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgButtonUserInfo"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/btnUserInfo"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnVehicleInfo"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_double_left" />

    <ImageView
        android:id="@+id/imgTopBorder"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/borderbg"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtRegisterUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imgButtonVehicleInfo"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:text="Register New User   "
        android:textColor="#F79100"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnVehicleInfo"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/btnUserInfo"
        android:layout_alignBottom="@+id/btnUserInfo"
        android:layout_alignRight="@+id/imgButtonUserInfo"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:text="Vehicle Info  "
        android:textColor="#ff888888"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnUserInfo"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/imgCarSpy"
        android:layout_below="@+id/imgTopBorder"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:text="  User Info"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imgCarSpy"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/carspygray"
        tools:ignore="ContentDescription" />

    <TableLayout
        android:id="@+id/tblUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgTextBg"
        android:layout_alignLeft="@+id/imgTextBg"
        android:layout_alignRight="@+id/tblVehicleText"
        android:layout_alignTop="@+id/imgTextBg" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="First Name:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Last Name:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Email:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Gender:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Birth Date:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Phone:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Address:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Password:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tblVehicleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgTextBg"
        android:layout_alignLeft="@+id/imgTextBg"
        android:layout_alignRight="@+id/btnCancel"
        android:layout_alignTop="@+id/imgTextBg"
        android:visibility="invisible" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Device ID:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Make:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Model:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Year:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Color:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="License Plate:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#F0F0F0"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tblUserTextBoxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgTextBg"
        android:layout_alignRight="@+id/imgTextBg"
        android:layout_alignTop="@+id/imgTextBg"
        android:layout_toRightOf="@+id/tblUserText" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <EditText
                android:id="@+id/txbFName"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <EditText
                android:id="@+id/txbLName"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <EditText
                android:id="@+id/txbEmail"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <EditText
                android:id="@+id/txbGender"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <EditText
                android:id="@+id/txbBDay"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:inputType="date"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <EditText
                android:id="@+id/txbPhone"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:inputType="phone"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <EditText
                android:id="@+id/txbAddress"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPostalAddress"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <EditText
                android:id="@+id/txbPassword"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPassword"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tblVehicleTextBoxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgTextBg"
        android:layout_alignRight="@+id/imgTextBg"
        android:layout_alignTop="@+id/imgTextBg"
        android:layout_toRightOf="@+id/tblUserText"
        android:visibility="invisible" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <EditText
                android:id="@+id/txbDeviceID"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <EditText
                android:id="@+id/txbMake"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <EditText
                android:id="@+id/txbModel"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <EditText
                android:id="@+id/txbYear"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <EditText
                android:id="@+id/txbColor"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <EditText
                android:id="@+id/txbLicensePlate"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#F0F0F0"
                android:ems="10"
                android:gravity="center"
                android:textSize="11sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/imgButtonDouble"
        android:layout_alignTop="@+id/imgButtonDouble"
        android:background="@android:color/transparent"
        android:text="Register  "
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/imgButtonDouble"
        android:layout_alignTop="@+id/imgButtonDouble"
        android:background="@android:color/transparent"
        android:text="  Cancel"
        tools:ignore="HardcodedText" />

</RelativeLayout>